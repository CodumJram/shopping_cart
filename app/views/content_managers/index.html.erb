<p id="notice"><%= notice %></p>

<h1>Content Managers</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @content_managers.each do |content_manager| %>
      <tr>
        <td><%= content_manager.email %></td>
        <td><%= link_to 'Show', content_manager %></td>
        <td><%= link_to 'Edit', edit_content_manager_path(content_manager) %></td>
        <td><%= link_to 'Destroy', content_manager, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

